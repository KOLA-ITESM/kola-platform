generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sensor {
  id        Int             @id @default(autoincrement())
  type      String
  location  String
  longitude String
  latitude  String
  status    String
  readings  SensorReading[]
}

model SensorReading {
  id            Int       @id @default(autoincrement())
  sensorId      Int
  readingValues Decimal[]
  readingTime   DateTime
  sensor        Sensor    @relation(fields: [sensorId], references: [id])
}
